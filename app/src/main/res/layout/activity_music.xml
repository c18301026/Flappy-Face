<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicActivity">

    <ImageButton
        android:id="@+id/theme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="25dp"
        android:background="@drawable/bach"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:onClick="options"
        />
    <ImageButton
        android:id="@+id/theme2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/theme1"
        android:padding="25dp"
        android:background="@drawable/hanna"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:onClick="options"
        />
    <ImageButton
        android:id="@+id/theme3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/theme2"
        android:padding="25dp"
        android:background="@drawable/scheepers"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:onClick="options"
        />
    <ImageButton
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/theme3"
        android:padding="25dp"
        android:background="@drawable/face"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:onClick="stop"
        />
    <Button
        android:id="@+id/backButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="25dp"
        android:background="@color/black"
        android:text="GO BACK"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:onClick="options"
        />

</RelativeLayout>